            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Fast Launch Program",
            "program": "${workspaceFolder}/dist/server/server-callejero.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "dumpDb",
            "preLaunchTask": "build-all",
            "program": "${workspaceFolder}/dist/server/server-callejero.js",
            "args": [
                "--dump-db"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
